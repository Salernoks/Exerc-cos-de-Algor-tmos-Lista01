package siwcthcase;
 import java.util.Scanner;
  public class Exercício05 {
    public static void main (String [] args){
        Scanner leitor = new Scanner(System.in);
        String mes;
        System.out.print("Digite o número do mês para saber se é alta ou baixa temporada do mesmo: ");
        mes = leitor.next();
        switch(mes){
            case "1":
                System.out.println("Janeiro é um mês de baixa temporada!");
                break;
            case "2":
                System.out.println("Fevereiro é um mês de alta temporada !");
                break;
            case "3":
                System.out.println("Março é um mês de baixa temporada");
                break;
            case "4":
                System.out.println("Abril é um mês de baixa temporada");
                break;
            case "5":
                System.out.println("Maio é um mês de baixa temporada");
                break;
            case "6":
                System.out.println("Junho é um mês de alta temporada!");
                break;
            case "7":
                System.out.println("Julho é um mês de alta temporada!");
                break;
            case "8":
                System.out.println("Agosto é um mês de baixa temporada!");
                break;
            case "9":
                System.out.println("Setembro é um mês de baixa temporada!");
                break;
            case "10":
                System.out.println("Outubro é um mês de baixa temporada!");
                break;
            case "11":
                System.out.println("Novembro é um mês de baixa temporada!");
                break;
            case "12":
                System.out.println("Dezembro é um mês de alta temporada!");
                break;
            default:
                System.out.println("Opção inválida!!!!"); 
    }
}
  }
