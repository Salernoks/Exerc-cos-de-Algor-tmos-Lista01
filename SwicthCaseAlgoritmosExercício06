package siwcthcase;
 import java.util.Scanner;
  public class Exercício6 {
    public static void main (String [] args){
      Scanner leitor = new Scanner (System.in);
      String dia;
        System.out.println("Para saber qual dia da semana é útil ou fim de semana digite: 1 para domingo, 2 para segunda feira e assim sucessivamente.");
        dia = leitor.next();
        switch(dia){
            case "1":
                System.out.println("Domingo faz parte do fim de semana");
                break;
            case "2":
                System.out.println("Segunda feira é um dia útil");
                break;
            case "3": 
                System.out.println("Terça feira é um dia útil");
                break;
            case "4":
                System.out.println("Quarta feira é um dia útil");
                break;
            case "5":
                System.out.println("Quinta feira é um dia útil");
                break;
            case "6":
                System.out.println("Sexta feira é um dia útil");
                break;
            case "7":
                System.out.println("Sábado faz parte do fim de semana");
                break;
            default:
                System.out.println("Dia ou caractere inválido!!!");
        }
    }
}
